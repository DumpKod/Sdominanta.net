{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NV-QPU Telemetry Event",
  "type": "object",
  "properties": {
    "ts": { "type": "string", "format": "date-time" },
    "run_id": { "type": "string" },
    "shot": { "type": "integer", "minimum": 0 },
    "module": { "type": "string", "enum": ["QuantumLens", "MW-Antenna", "GraphGate.16", "GraphReadout", "PKS"] },
    "odmr_contrast": { "type": ["number", "null"] },
    "t2_star_us": { "type": ["number", "null"], "minimum": 0 },
    "t1_ms": { "type": ["number", "null"], "minimum": 0 },
    "photon_counts": { "type": ["integer", "null"], "minimum": 0 },
    "gamma_r": { "type": ["number", "null"], "minimum": 0 },
    "Sigma_max": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
    "Delta": { "type": ["number", "null"], "minimum": 0 },
    "epsilon_t": { "type": ["number", "null"] },
    "lambda": { "type": ["number", "null"], "minimum": 0 },
    "T_index": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
    "threshold_crossings": {
      "type": "object",
      "properties": {
        "T_0_5": { "type": ["number", "null"], "description": "time to T=0.5 (us)" },
        "T_0_1": { "type": ["number", "null"], "description": "time to T=0.1 (us)" }
      },
      "additionalProperties": false
    },
    "notes": { "type": ["string", "null"] }
  },
  "required": ["ts", "run_id", "module"],
  "additionalProperties": false
}


